<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example._examendi.Controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="loginLabel" text="Login" style="-fx-font-size: 20"/>
    <TextField fx:id="username" maxWidth="200"/>
    <Label fx:id="passwordLabel" text="ContraseÃ±a"/>
    <PasswordField fx:id="password" maxWidth="200"/>

    <Label fx:id="labelError" style="--block-text-color: red"/>

    <Button fx:id="loginBoton" text="Login" onAction="#handleLogin"/>
    <Button fx:id="registroBoton" text="Registrarse" onAction="#handleRegistrarse"/>
</VBox>
